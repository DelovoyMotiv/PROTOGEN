# PROTOGEN-01 Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================

# Base L2 RPC URL (Primary)
BASE_RPC_URL=https://mainnet.base.org

# Fallback RPC URLs (comma-separated)
# FALLBACK_RPC_URLS=https://base.llamarpc.com,https://base.blockpi.network/v1/rpc/public

# USDC Contract Address on Base L2
USDC_CONTRACT_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ============================================
# IDENTITY & SECURITY
# ============================================

# Machine ID for vault encryption (unique per deployment)
MACHINE_ID=protogen-production-01

# Vault encryption password (CRITICAL - use strong password)
# Generate with: openssl rand -base64 32
VAULT_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Wallet encryption key for APA payments
# Generate with: openssl rand -hex 32
WALLET_ENCRYPTION_KEY=CHANGE_THIS_TO_SECURE_KEY

# ============================================
# AI INTEGRATION
# ============================================

# OpenRouter API Key for Cortex (LLM reasoning)
VITE_OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# OpenRouter Model Selection
VITE_OPENROUTER_MODEL=minimax/minimax-m2:free

# ============================================
# AGENT-PAY-AGENT (APA)
# ============================================

# Platform wallet address for receiving payments
PLATFORM_WALLET_ADDRESS=0x742d35Cc6634C0532925a3b844Bc454e4438f44e

# ============================================
# MESH NETWORK
# ============================================

# Bootstrap peers (comma-separated DIDs)
# BOOTSTRAP_PEERS=aid://anoteroslogos.com/geo-audit,aid://peer2.example.com/agent

# Local agent AID URI
# AGENT_AID=aid://protogen-01/autonomous-agent

# Mesh network port
# MESH_PORT=8080

# ============================================
# CONSENSUS
# ============================================

# CCC Mining difficulty (1-5, default: 2)
CCC_MINING_DIFFICULTY=2

# CCC Mining intensity (LOW or HIGH)
CCC_MINING_INTENSITY=LOW

# ============================================
# PERSISTENCE
# ============================================

# Data directory path
DATA_DIR=./data

# Backup retention days
BACKUP_RETENTION_DAYS=7

# ============================================
# MONITORING
# ============================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable Prometheus metrics
# ENABLE_METRICS=true

# Metrics port
# METRICS_PORT=9090

# ============================================
# DEPLOYMENT
# ============================================

# Node environment
NODE_ENV=production

# Application port
PORT=3000

# WebSocket port
WS_PORT=8080

# HTTP/2 port (if enabled)
# HTTP2_PORT=8443

# ============================================
# RATE LIMITING
# ============================================

# Max requests per minute
RATE_LIMIT_MAX=100

# Rate limit window (ms)
RATE_LIMIT_WINDOW=60000

# ============================================
# ECONOMIC SAFETY
# ============================================

# Minimum USDC balance for survival mode
SURVIVAL_MODE_THRESHOLD=20.00

# Maximum gas price (Gwei) before pausing transactions
MAX_GAS_PRICE_GWEI=2.0

# Maximum job cost as percentage of balance
MAX_JOB_COST_PERCENT=0.10

# ============================================
# AUTONOMOUS EARNING ENGINE
# ============================================

# Enter earning mode when balance falls below this threshold (USDC)
SURVIVAL_THRESHOLD=1.00

# Exit earning mode when balance reaches this threshold (USDC)
SAFE_THRESHOLD=5.00

# Minimum profit margin for accepting tasks (0.30 = 30%)
MIN_PROFIT_MARGIN=0.30

# Maximum task execution duration in seconds (1800 = 30 minutes)
MAX_TASK_DURATION=1800

# Escrow contract address on Base L2
ESCROW_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Minimum requester reputation score (0-100)
MIN_REPUTATION_SCORE=30

# Maximum acceptable risk score (0-100)
RISK_THRESHOLD=70

# Blacklist duration in milliseconds (86400000 = 24 hours)
BLACKLIST_DURATION=86400000

# Earning cycle interval in milliseconds (300000 = 5 minutes)
EARNING_CYCLE_INTERVAL=300000

# Maximum consecutive failures before CRITICAL_FAILURE
MAX_CONSECUTIVE_FAILURES=3

# LLM model for earning advisor decisions
EARNING_ADVISOR_MODEL=gpt-4

# LLM temperature for earning decisions (lower = more consistent)
EARNING_ADVISOR_TEMPERATURE=0.3

# ============================================
# DEVELOPMENT ONLY
# ============================================

# Enable debug mode (DO NOT USE IN PRODUCTION)
# DEBUG=true

# Mock blockchain responses (DO NOT USE IN PRODUCTION)
# MOCK_BLOCKCHAIN=false

# ============================================
# DOCKER CONFIGURATION
# ============================================

# Docker container name
CONTAINER_NAME=protogen-01

# Docker network name
NETWORK_NAME=protogen-network

# CPU limit
CPU_LIMIT=2.0

# Memory limit
MEMORY_LIMIT=2G
